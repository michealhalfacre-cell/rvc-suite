{
  "title": "RVC Fast Inference",
  "description": "Serverless API for fast Retrieval-based Voice Conversion (RVC). Send audio + model name, get converted audio back.",
  "type": "serverless",
  "category": "audio",
  "config": {
    "runsOn": "GPU",
    "containerDiskInGb": 20,
    "gpuCount": 1,
    "gpuIds": "NVIDIA RTX 4090,L40S",
    "env": [
      {
        "key": "MODELS_DIR",
        "value": "/models"
      },
      {
        "key": "OUTPUT_FORMAT",
        "input": {
          "name": "Output format",
          "type": "string",
          "description": "Choose audio format",
          "options": [
            { "label": "WAV", "value": "wav" },
            { "label": "MP3", "value": "mp3" }
          ],
          "default": "wav"
        }
      },
      {
        "key": "RETURN_BASE64",
        "input": {
          "type": "boolean",
          "name": "Return base64",
          "description": "Return audio as base64 string",
          "default": true,
          "trueValue": "true",
          "falseValue": "false"
        }
      }
    ]
  }
}
